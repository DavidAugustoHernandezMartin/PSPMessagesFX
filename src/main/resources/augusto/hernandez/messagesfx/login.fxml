<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="augusto.hernandez.messagesfx.Login">
   <VBox layoutX="108.0" layoutY="91.0" prefHeight="140.0" prefWidth="385.0">
      <HBox prefHeight="70.0" prefWidth="385.0">
         <Label prefHeight="59.0" prefWidth="155.0" text="User:">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
         <TextField fx:id="textFieldUser" prefHeight="34.0" prefWidth="283.0">
            <HBox.margin>
               <Insets top="10.0" />
            </HBox.margin>
         </TextField>
      </HBox>
      <HBox prefHeight="70.0" prefWidth="385.0">
         <Label prefHeight="59.0" prefWidth="155.0" text="Password:">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
         <PasswordField fx:id="passwordField" prefHeight="32.0" prefWidth="282.0">
            <HBox.margin>
               <Insets top="15.0" />
            </HBox.margin>
         </PasswordField>
      </HBox>
   </VBox>
   <Button fx:id="buttonLogin" layoutX="196.0" layoutY="265.0" mnemonicParsing="false" onAction="#login" prefHeight="50.0" prefWidth="210.0" text="Login">
      <font>
         <Font size="18.0" />
      </font>
   </Button>
   <Hyperlink fx:id="linkRegistro" layoutX="171.0" layoutY="347.0" onAction="#registro" text="I don't have an account yet">
      <font>
         <Font size="18.0" />
      </font>
   </Hyperlink>
</AnchorPane>
